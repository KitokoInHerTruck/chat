<h2>Modifier mon profil <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>J'attends ta confirmation pour: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(laisse vide si tu ne veux pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "nouveau mot de passe" %>
    <% if @minimum_password_length 4 %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nouveau mot de passe" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(j'ai besoin de votre mot de passe actuel pour confirmer tes modifications)</i><br />
    <%= f.password_field :current_password, autocomplete: "mot de passe actuel" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<div>Tu n'es pas heureux parmi nous? <%= button_to "supprimer mon compte", registration_path(resource_name), data: { confirm: "Es-tu sûr(e)?", turbo_confirm: "Es-tu sûr(e)?" }, method: :delete %></div>

<%= link_to "Retour", :back %>
